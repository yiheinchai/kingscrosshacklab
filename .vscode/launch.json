{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Vite React App (Chrome)",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/kxhl",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*"
      }
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Debug Vite React App (Edge)",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/kxhl",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*"
      }
    },
    {
      "name": "Debug Makemore API",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["api:app", "--host", "0.0.0.0", "--port", "5001", "--reload"],
      "cwd": "${workspaceFolder}/projects/makemore/api",
      "python": "${workspaceFolder}/projects/makemore/.venv/bin/python",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "ROSSETTA_SECRET_KEY": "dev-rossetta-secret",
        "SESSION_SECRET_KEY": "dev-session-secret"
      }
    },
    {
      "name": "Debug Makemore API (No Reload)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["api:app", "--host", "0.0.0.0", "--port", "5001"],
      "cwd": "${workspaceFolder}/projects/makemore/api",
      "python": "${workspaceFolder}/projects/makemore/.venv/bin/python",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "ROSSETTA_SECRET_KEY": "dev-rossetta-secret",
        "SESSION_SECRET_KEY": "dev-session-secret"
      }
    },
    {
      "name": "Debug Makemore API (Direct)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/projects/makemore/api/api.py",
      "args": [],
      "cwd": "${workspaceFolder}/projects/makemore/api",
      "python": "${workspaceFolder}/projects/makemore/.venv/bin/python",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "ROSSETTA_SECRET_KEY": "dev-rossetta-secret",
        "SESSION_SECRET_KEY": "dev-session-secret"
      }
    }
  ]
}
